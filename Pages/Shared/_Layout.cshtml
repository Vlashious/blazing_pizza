<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <base href="~/">
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body class="bg-secondary">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a asp-page="/index" class="navbar-brand">PAŁYMIANNAJA PICA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a asp-page="/index" class="nav-link">Dadomu</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/pizzas" class="nav-link">Picy</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/drinks" class="nav-link">Napoji</a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="/cart" class="nav-link">Košyk</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>