@page "/drinks"
@model Pages.Model.DrinksModel

@if(Model.Drinks.Count > 0)
{
    <div class="card-deck justify-content-center">
        @foreach (var item in Model.Drinks)
        {
            <component type="typeof(ItemComponent)" render-mode="ServerPrerendered" param-Item="@item"></component>
            <component type="typeof(ItemComponent)" render-mode="ServerPrerendered" param-Item="@item"></component>
            <component type="typeof(ItemComponent)" render-mode="ServerPrerendered" param-Item="@item"></component>
        }
    </div>
}
else
{
    <h2>Nothing to show here!</h2>
}